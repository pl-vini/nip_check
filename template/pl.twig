{% set status = "BÅAD" %}
{% set rowClass = "table-warning" %}
{% if (data.status == "YES") %}
    {% set status = "TAK" %} 
    {% set rowClass = "table-success" %}
{% elseif (data.status == "NO") %}
    {% set status = "NIE" %}
    {% set rowClass = "table-danger" %}
{% endif %}
{% set nip = data.number %}
<tr class="{{ rowClass }}">
    <td>{{ status }} [{{ data.status_org }}]</td>
    <td>{{ data.companyData.col11 }}</td>
    <td>{{ nip }}</td>
    <td>PL</td>
    <td>
        {{ data.companyData.sapId }} -  {{ data.companyData.name }}, {{ data.companyData.street }}, {{ data.companyData.postCode }} {{ data.companyData.city }}
        <br><hr>
        {{ data.status_text }}
        {% if status != "TAK" %}
            <br>{{ data.address }}
        {% endif %}
    </td>
</tr>